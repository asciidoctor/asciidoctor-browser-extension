{
  "name": "asciidoctor-chrome-extension",
  "description": "Render AsciiDoc (.ad, .adoc, .asc, .asciidoc) as HTML inside your browser!",
  "version": "2.0.0",
  "engines": {
    "node": ">=8.11",
    "npm": ">=5.0.0"
  },
  "scripts": {
    "test": "karma start --single-run --browsers ChromeHeadless karma.conf.js",
    "test:nosandbox": "karma start --single-run --browsers ChromeHeadlessNoSandbox karma.conf.js",
    "build:highlightjs": "browserify src/js/highlight.js --standalone hljs | uglifyjs > app/js/vendor/highlight.min.js",
    "build": "npm run lint:code && npm run build:highlightjs && node tasks/build.js",
    "lint:code": "eslint app/js/*.js app/js/vendor/asciidoctor-*.js npm",
    "lint:firefox": "addons-linter dist/asciidoctor-browser-extension.zip"
  },
  "homepage": "https://github.com/asciidoctor/asciidoctor-chrome-extension",
  "author": {
    "name": "Guillaume Grossetie"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:asciidoctor/asciidoctor-chrome-extension.git"
  },
  "bugs": {
    "url": "https://github.com/asciidoctor/asciidoctor-chrome-extension/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "@asciidoctor/core": "^2.0.0",
    "addons-linter": "^1.8.0",
    "archiver": "3.0.0",
    "asciidoctor-plantuml": "1.1.13",
    "bestikk-fs": "1.0.0",
    "bestikk-log": "0.1.0",
    "browserify": "16.2.3",
    "bulma": "0.7.4",
    "chartist": "0.11.0",
    "csso": "3.5.1",
    "eslint": "4.8.0",
    "eslint-config-standard": "10.2.1",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-node": "5.2.0",
    "eslint-plugin-promise": "3.5.0",
    "eslint-plugin-standard": "3.0.1",
    "font-awesome": "4.7.0",
    "highlight.js": "9.15.6",
    "jasmine-core": "3.4.0",
    "karma": "^4.0.1",
    "karma-chrome-launcher": "2.2.0",
    "karma-jasmine": "2.0.1",
    "node-sass": "^4.11.0",
    "puppeteer": "1.14.0",
    "uglify-js": "3.5.4"
  },
  "keywords": [
    "browser",
    "chrome",
    "chromium",
    "opera",
    "firefox",
    "extension",
    "asciidoctor"
  ]
}
